
@{
    ViewBag.Title = "SnakeScore";
}





<div class="row">
    <div class="col-md-offset-4">
        <div class="col-md-offset-1">
            <h1 class="pageheaders" style="padding-left:10px; padding-top:20px">SnakeScore</h1>
            <h2 style="color:#8BD0EE;font-weight:bolder;">You Scored @ViewBag.score</h2>
        </div>
        <br />
        <p style="padding-left:40px;">
            Like your score?  Go ahead and save it!
        </p>
        <div style="padding-left:120px;">@Html.ActionLink("Save Score", "SnakeSaveScore", null, new { @class = "btn btn-info" })</div>

        <p style="margin-top:40px; margin-left:-45px;">Unhappy with your score? Click Try Again and give it another shot</p>
        <div style="padding-left:130px;">@Html.ActionLink("Try Again", "Snake", null, new { @class = "btn btn-info" })</div>
    </div>

</div>






