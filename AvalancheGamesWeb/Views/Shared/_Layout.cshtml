<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AvalancheGames</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <style>
       #nav a{
            color: #292828!important;
            /*background-color: #8BD0EE;*/
            font-size: 18px;
        }
    </style>
    <div id="nav" style="color: #292828!important;background-color:#8BD0EE;font-size: 18px;" class="navbar navbar-inverse navbar-fixed-top navbar-custom">
        <div class="container">
            <div id="nav" style="color: #292828!important;background-color:#8BD0EE;font-size: 18px;" class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a href="#" class="navbar-left"><img src=" ~/Content/Images/AvalancheGamesLogoWithOutText.png" width="125" , height="75" /> </a>
                @*@Html.ActionLink("Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#8BD0EE">
                            About
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                        @if (User.IsInRole(Constants.AdminRoleName))
                        {
                        <li>@Html.ActionLink("Testing", "Index", "ErrorTest")</li>
                        <li>@Html.ActionLink("Users", "Index", "User")</li>
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#8BD0EE">
                                Games
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Floaty", "Floaty", "Game")</li>
                                <li>@Html.ActionLink("PongBall", "PongBall", "Game")</li>
                                <li>@Html.ActionLink("Snake", "Snake", "Game")</li>
                            </ul>
                        </li>


                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#8BD0EE">
                                Comments
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Comments", "Index", "Comment")</li>
                                <li>@Html.ActionLink("MyComments", "Index", "MyComments")</li>
                            </ul>
                        </li>

                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#8BD0EE">
                                Scores
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Scores", "Index", "Score")</li>
                                <li>@Html.ActionLink("MyScores", "Index", "MyScores") </li>

                            </ul>
                        </li>



                    }
                    else if (User.IsInRole(Constants.PowerRoleName))
                    {

                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#8BD0EE">
                                Games
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Floaty", "Floaty", "Game")</li>
                                <li>@Html.ActionLink("PongBall", "PongBall", "Game")</li>
                                <li>@Html.ActionLink("Snake", "Snake", "Game")</li>
                            </ul>
                        </li>
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#8BD0EE">
                                Comments
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Comments", "Index", "Comment")</li>
                                <li>@Html.ActionLink("MyComments", "Index", "MyComments")</li>
                            </ul>
                        </li>
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#8BD0EE">
                                Scores
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Scores", "Index", "Score")</li>
                                <li>@Html.ActionLink("MyScores", "Index", "MyScores") </li>

                            </ul>
                        </li>

                    }
                    else if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="background-color:#8BD0EE">
                                Games
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Floaty", "Floaty", "Game")</li>
                                <li>@Html.ActionLink("PongBall", "PongBall", "Game")</li>
                                <li>@Html.ActionLink("Snake", "Snake", "Game")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("MyComments", "Index", "MyComments")</li>
                        <li>@Html.ActionLink("MyScores", "Index", "MyScores") </li>
                    }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                            <li>@Html.ActionLink("Welcome " + User.Identity.Name, "Index", "Home") </li>

                            if (User.Identity.AuthenticationType.StartsWith("ClearText"))
                            {
                                <li>@Html.ActionLink("HASH Password", "Hash", "Home")</li>
                            }
                        }
                        else
                        {
                            <li>@Html.ActionLink("Register", "Register", "RegisterUser")</li>
                            <li>@Html.ActionLink("Login", "Login", "Home")</li>
                        }

                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer class="footer" style="color: #8BD0EE;">
                <p>&copy; @DateTime.Now.Year - AvalancheGames</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
